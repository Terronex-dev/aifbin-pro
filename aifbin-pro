#!/bin/sh
# Wrapper for the AIF-BIN Pro CLI
# This allows running `./aifbin-pro --help` instead of `python3 cli/aifbin_pro.py --help`

# Find the python interpreter
if command -v python3 >/dev/null 2>&1; then
    PYTHON_CMD="python3"
else
    PYTHON_CMD="python"
fi

# Get the directory of this script
DIR=$(cd "$(dirname "$0")" && pwd)

# Execute the main CLI script
$PYTHON_CMD "$DIR/cli/aifbin_pro.py" "$@"
